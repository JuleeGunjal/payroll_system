<h2>Employee Registration </h2><br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div><br/>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div><br/>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div><br/>
  
  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div><br/>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div><br/>

  <div class="field">
    <%= f.radio_button :gender, 'Male' %> 
    <%= f.label :gender, 'Male', :value => 'Male' %>
    <%= f.radio_button :gender, 'Female' %>
    <%= f.label :gender, 'Female', :value => 'Female' %>
  </div><br/>

  <div class="field">
    <%= f.label :date_of_joining %>
    <%= f.date_field :date_of_joining, as: :date, html5: true%>
  </div><br/>
  
  <div class="field">
    <%= f.label :mobile_number %>
    <%= f.text_field :mobile_number %>
  </div><br/>
  
  <div>
  <%= f.hidden_field :type, :as => :hidden, :input_html => { :value => "employee" } %>
  </div> 

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
