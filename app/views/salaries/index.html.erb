<div class="col-8" style="margin : 0 auto; padding: 10px">
  <h1>Employee salary data</h1></br>
</div>

<table class="table table-striped">

  <thead class="thead-light">

    <tr>
      <th>ID</th>
      <th>Employee ID</th>
      <th>Date</th>
      <th>Total salary</th>      
    </tr>

  </thead>

  <tbody>

    <% @salaries.each do |salary| %>
      <tr>
        <td><%= link_to "#{salary.id}", salary_path(salary), class:'btn btn-outline-primary', style:'width:40px'%></td>
        <td><%= salary.employee_id %></td>
        <td><%= salary.date%></td> 
        <td><%= salary.total_salary%></td>        
      </tr>

   <% end %>

  </tbody>

</table>

<%if current_user.type == 'Admin'%>

  <div class="col-2" style="margin : 0 auto; padding: 10px">
    <%= link_to 'Add new', new_salary_path, class: "btn btn-success" %>
  </div>
  
<%end%>