
<%= form_for(@attendance, url: attendances_path) do |form| %>
  <table>
    <tr>
      <div>
        <td><%= form.label :month, "Month: " %></td>
        <td><%= form.select :month, options_for_select((1..12).map {|m| [Date::MONTHNAMES[m], format('%02d', m)]}), :required => true, :include_blank => "Select Month" %>  </td>
       
      </div>
    </tr>
    
    <tr>
      <div>
        <td><%= form.label :employee_id, 'Employee name: '%></td>
        <td> <%= form.collection_select :employee_id, Employee.all, :id, :first_name, prompt: true %></td>
      </div>
    </tr>  
       
  </table></br></br>

  <div class="col-8", style="margin: 0 auto;">
    <%= form.submit class: "btn btn-warning"%>
  </div>
<% end %>